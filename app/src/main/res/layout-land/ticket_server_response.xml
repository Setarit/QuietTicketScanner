<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ticket_server_response_container"
    android:layout_height="match_parent">

    <Button
        android:text="@string/continue_scanning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/continue_scanning"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/ticket_server_message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="36sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/image_ok"
        android:id="@+id/status_image"
        android:layout_centerVertical="true"
        android:contentDescription="@string/status_image"
        android:layout_centerHorizontal="true" />
</RelativeLayout>