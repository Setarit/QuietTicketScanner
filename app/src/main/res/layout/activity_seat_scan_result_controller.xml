<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scanResultContainer"
    tools:context="com.setarit.quietticketscanner.SeatScanResultController">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/seatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/white"
            android:textSize="24pt"
            tools:text="Seat" />

        <TextView
            android:id="@+id/scanResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seatName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="113dp"
            android:textColor="@android:color/white"
            android:textSize="18pt"
            tools:text="Scan result" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/resumeScanning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:tint="@android:color/white"
            app:backgroundTint="@color/colorActiveButton"
            app:fabSize="normal"
            app:srcCompat="@drawable/done" />

    </RelativeLayout>
</FrameLayout>
